{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "sourceMap": true,
    "lib": [
      "dom",
      "es2017",
      "esnext"
    ],
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": true,
    "experimentalDecorators": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "test"
  ]
}
